{
    "env": {
        "es6": true,
        "node": true
    },
    "extends": [
        "trybe-backend"
    ],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "rules": {
        "import/extensions": ["error", "ignorePackages"],
        "complexity": ["error", 10],
        "max-lines-per-function": ["error", 40]
    }
}